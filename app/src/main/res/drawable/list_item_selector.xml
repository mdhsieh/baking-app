<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Add color to three items for: pressed, activated, and selected states -->
    <item android:drawable="@color/colorPrimary" android:state_pressed="true" />
    <item android:drawable="@color/colorPrimary" android:state_activated="true" />
    <item android:drawable="@color/colorPrimary" android:state_selected="true" />

    <item android:drawable="@color/colorAccent" android:state_focused="true" />

    <!-- Add one more item for the default (unselected) state -->
    <item android:drawable="@android:color/background_light" />
</selector>